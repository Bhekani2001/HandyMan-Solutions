@model HandyMan_Solutions.Models.RateService

@{
    ViewBag.Title = "Rate Service";
}

<h2>Rate Your Service</h2>

@using (Html.BeginForm("RateService", "ServiceProvides", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="ServiceType">Select Service</label>
        @Html.DropDownListFor(m => m.Id, new SelectList(Model.UserServices, "Id", "ServiceType"), "-- Select Service --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Rating">Rating (1 to 5 Stars)</label>
        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control", type = "number", min = "1", max = "5", step = "0.5" })
    </div>

    <div class="form-group">
        <label for="Comments">Comments</label>
        @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", rows = 4 })
    </div>

    <button type="submit" class="btn btn-primary">Submit Rating</button>
}
