@model IEnumerable<HandyMan_Solutions.Models.ServiceProvided>

@{
    ViewBag.Title = "Index";
}

<div class="mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-auto">

                            <a href="@Url.Action("RateService", "ServiceProvides")" class="btn btn-primary">
                                <i class="bi bi-star"></i> Rate Service
                            </a>
                        </div>
                        <div class="col text-center">
                            <h2>My Service(s) History</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Service Type</th>
                                <th>Description</th>
                                <th>Fee Charged</th>
                                <th>Applied</th>
                                <th>End Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ServiceType)</td>
                                        <td><small>@Html.DisplayFor(modelItem => item.Description)</small></td>
                                        <td><small>@String.Format("R {0:N2}", item.EstimatedCost)</small></td>
                                        <td><small>@String.Format("{0:yyyy-MM-dd}", item.PaymentDate)</small></td>
                                        <td><small>@String.Format("{0:yyyy-MM-dd}", item.EndDate)</small></td>
                                        <td id="status-@item.Id">@Html.DisplayFor(modelItem => item.Status)</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">
                                        <div class="alert alert-danger text-center rounded-0" style="border:solid green" role="alert">
                                            No Records
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
