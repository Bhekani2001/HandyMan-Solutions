@{
    ViewBag.Title = "FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .list-group-item {
        font-size: 1.25rem;
        border: 2px solid #dee2e6;
        border-radius: 0.375rem; 
    }

    .question-text {
        font-weight: bold; 
    }
</style>


<div class="card shadow">
    <div class="card-body">
        <h2 class="text-center mb-4 shadow">How May We Assist You?</h2>
        <hr />
        <h5 class="card-title">Frequently Asked Questions</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <a data-bs-toggle="collapse" href="#faq1" role="button" aria-expanded="false" aria-controls="faq1">
                    <i class="bi bi-plus-circle"></i> What services do you offer?
                </a>
                <div class="collapse" id="faq1">
                    <div class="mt-2">
                        We offer a wide range of handyman services including plumbing, electrical work, carpentry, painting, and general home repairs.
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <a data-bs-toggle="collapse" href="#faq2" role="button" aria-expanded="false" aria-controls="faq2">
                    <i class="bi bi-plus-circle"></i> How can I schedule a service?
                </a>
                <div class="collapse" id="faq2">
                    <div class="mt-2">
                        You can schedule a service by calling us directly, using our online booking system, or filling out the contact form on our website.
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <a data-bs-toggle="collapse" href="#faq3" role="button" aria-expanded="false" aria-controls="faq3">
                    <i class="bi bi-plus-circle"></i> What are your service hours?
                </a>
                <div class="collapse" id="faq3">
                    <div class="mt-2">
                        Our regular service hours are Monday to Friday, from 8:00 AM to 6:00 PM. We also offer emergency services outside these hours.
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <a data-bs-toggle="collapse" href="#faq4" role="button" aria-expanded="false" aria-controls="faq4">
                    <i class="bi bi-plus-circle"></i> Are your technicians insured?
                </a>
                <div class="collapse" id="faq4">
                    <div class="mt-2">
                        Yes, all of our technicians are fully insured and undergo background checks to ensure your safety and peace of mind.
                    </div>
                </div>
            </li>
        </ul>
    </div>

    <div class="card-footer bg-transparent">
        <div class="form-group">
            <div class="text-center">
                <a href="@Url.Action("Contact", "Home")" class="btn btn-primary" id="btnContact">Contact Us Now!</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Toggle icons based on collapse state
            $('a[data-bs-toggle="collapse"]').on('click', function () {
                var icon = $(this).find('i');
                var target = $(this).attr('href');

                // Use setTimeout to ensure collapse is toggled before changing icon
                setTimeout(function () {
                    if ($(target).hasClass('show')) {
                        icon.removeClass('bi-plus-circle').addClass('bi-dash-circle');
                    } else {
                        icon.removeClass('bi-dash-circle').addClass('bi-plus-circle');
                    }
                }, 200);
            });

            // Initialize icons based on initial collapse state
            $('.collapse').each(function () {
                var icon = $(this).prev().find('i');
                if ($(this).hasClass('show')) {
                    icon.removeClass('bi-plus-circle').addClass('bi-dash-circle');
                } else {
                    icon.removeClass('bi-dash-circle').addClass('bi-plus-circle');
                }
            });
        });
    </script>
}
