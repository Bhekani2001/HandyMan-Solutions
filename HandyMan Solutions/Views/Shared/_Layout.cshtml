    <style>
        .form-control.required {
            border-left: 5px solid #ff6347;
            padding-left: 25px;
            position: relative;
        }

            .form-control.required::before {
                content: "*";
                color: #ff6347;
                font-weight: bold;
                font-size: 1.2em;
                position: absolute;
                left: 5px;
                top: 50%;
                transform: translateY(-50%);
            }

        .navbar-brand-custom {
            display: block;
            width: 150px;
            height: 40px;
            background-image: url(/Images/HandyMan.jpeg);
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            text-indent: -9999px;
            overflow: hidden;
        }

        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #111;
            padding-top: 20px;
            transition: 0.5s;
            overflow-x: hidden;
            z-index: 1;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: #818181;
                display: block;
                transition: 0.3s;
                border: 1px solid transparent;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                    border: 1px solid #575757;
                    background-color: #222;
                }

            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        #main {
            transition: margin-left .5s;
            padding: 0px;
        }

        .dropdown-menu {
            display: none;
        }

            .dropdown-menu.show {
                display: block;
            }

        .dropdown-item {
            color: #f1f1f1;
        }

            .dropdown-item:hover {
                background-color: #575757;
            }

        .sidebar .dropdown-menu {
            display: none;
            padding-left: 0;
        }

            .sidebar .dropdown-menu.show {
                display: block;
            }

        .sidebar .dropdown-item {
            text-decoration: none;
            color: #f1f1f1;
            display: block;
            padding: 10px 15px;
            border-radius: 5px;
        }

            .sidebar .dropdown-item:hover {
                background-color: #575757;
            }
    </style>
