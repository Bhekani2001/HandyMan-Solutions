@model IEnumerable<HandyMan_Solutions.Models.Qoutation>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h2>My Qoutation History</h2>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <a href="@Url.Action("RequestQuotation","Qoutations")" class="btn btn-outline-secondary">Request Qoutation</a>

                <a href="@Url.Action("ExportToExcel", "CarOnboardings")" class="btn btn-success ml-2">
                    <i class="bi bi-file-earmark-excel"></i>
                </a>
                <a href="@Url.Action("ExportToPdf", "CarOnboardings")" class="btn btn-danger ml-2">
                    <i class="bi bi-file-earmark-pdf"></i>
                </a>

            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Applicant</th>
                        <th>Service</th>
                        <th>Desc.</th>
                        <th>Technician</th>
                        <th>Cost</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.ServiceType)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.TechnicianAssigned)</td>
                            <td>@Html.DisplayFor(modelItem => item.EstimatedCost)</td>
                            <td>@String.Format("{0:yyyy-MM-dd}", item.RequestedDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                <a href="#" class="btn btn-outline-danger btn-sm delete-task" data-task-id="@item.qoutationKey">Trash</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteTaskModal" tabindex="-1" aria-labelledby="deleteTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-secondary">
                <h5 class="modal-title" id="deleteTaskModalLabel">Confirm Cancell</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to cancell this qouation request?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            var taskIdToDelete;
            var taskIdToUpdate;



            $('.delete-task').click(function () {
                taskIdToDelete = $(this).data('task-id');
                $('#deleteTaskModal').modal('show');
            });

            $('#confirmDeleteButton').click(function () {
                $.ajax({
                    url: '@Url.Action("CancelQuotation", "Qoutations")',
                    type: 'POST',
                    data: { id: taskIdToDelete },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Deleted!',
                                'The qoutation request has been cancelled.',
                                'success'
                            ).then((result) => {
                                if (result.isConfirmed) {
                                    location.reload();
                                }
                            });
                        } else {
                            Swal.fire(
                                'Error!',
                                'There was an issue cancelling your request.',
                                'error'
                            );
                        }
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'There was an issue cancelling your request.',
                            'error'
                        );
                    }
                });
            });
        });
    </script>
}
