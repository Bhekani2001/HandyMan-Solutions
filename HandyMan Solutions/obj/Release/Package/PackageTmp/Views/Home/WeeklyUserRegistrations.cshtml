@model HandyMan_Solutions.Models.WeeklyUserRegistrationsViewModel
@using Newtonsoft.Json

<!DOCTYPE html>
<html>
<head>
    <title>Weekly User Registrations</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div style="width: 75%; margin: auto;">
        <!-- Bar Chart -->
        <h2>Bar Chart of User Registrations</h2>
        <canvas id="barChart"></canvas>

        <!-- Line Chart -->
        <h2>Line Chart of User Registrations</h2>
        <canvas id="lineChart"></canvas>

        <!-- Pie Chart -->
        <h2>Pie Chart of User Registrations</h2>
        <canvas id="pieChart"></canvas>
    </div>

    <script>
        // Bar Chart
        var ctxBar = document.getElementById('barChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: @Html.Raw(JsonConvert.SerializeObject(Model.Weeks)),
                datasets: [{
                    label: 'User Registrations (Bar)',
                    data: @Html.Raw(JsonConvert.SerializeObject(Model.UserCounts)),
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: true
                    }
                }
            }
        });

        // Line Chart
        var ctxLine = document.getElementById('lineChart').getContext('2d');
        new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: @Html.Raw(JsonConvert.SerializeObject(Model.Weeks)),
                datasets: [{
                    label: 'User Registrations (Line)',
                    data: @Html.Raw(JsonConvert.SerializeObject(Model.UserCounts)),
                    fill: false,
                    borderColor: 'rgba(153, 102, 255, 1)',
                    tension: 0.1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: true
                    }
                }
            }
        });

        // Pie Chart
        var ctxPie = document.getElementById('pieChart').getContext('2d');
        new Chart(ctxPie, {
            type: 'pie',
            data: {
                labels: @Html.Raw(JsonConvert.SerializeObject(Model.Weeks)),
                datasets: [{
                    label: 'User Registrations (Pie)',
                    data: @Html.Raw(JsonConvert.SerializeObject(Model.UserCounts)),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    legend: {
                        display: true
                    }
                }
            }
        });
    </script>
</body>
</html>
