@model HandyMan_Solutions.Models.RateServiceViewModel

@{
    ViewBag.Title = "Rate Service";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Rate Service</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("RateService", "Generals", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.ServiceId, "Select Service")
                            @Html.DropDownListFor(model => model.ServiceId, (SelectList)ViewBag.ServiceList, "Select a service", new { @class = "form-control required" })
                            @Html.ValidationMessageFor(model => model.ServiceId)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Rating, "Rating")
                            @Html.DropDownListFor(model => model.Rating, new SelectList(Enumerable.Range(1, 5)), "Select a rating", new { @class = "form-control required" })
                            @Html.ValidationMessageFor(model => model.Rating)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Comments)
                            @Html.TextAreaFor(model => model.Comments, new { @class = "form-control required" })
                            @Html.ValidationMessageFor(model => model.Comments)
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit Rating</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
