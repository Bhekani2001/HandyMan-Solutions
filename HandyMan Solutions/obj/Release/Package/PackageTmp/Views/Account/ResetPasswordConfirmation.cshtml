@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="d-flex justify-content-center mt-5">
    <div class="jumbotron text-center" style="width: 80%;">
        <h2 class="display-5">
            <i class="bi bi-envelope-check"></i> Forgot Password Confirmation
        </h2>
        <p class="lead">
            <i class="bi bi-envelope-open"></i> Please check your email to reset your password.
        </p>
        <hr class="my-4">
        <p>
            <i class="bi bi-info-circle"></i> If you didn't receive the email, check your spam folder or try sending the request again.
        </p>
        <a class="btn btn-primary btn-lg" href="@Url.Action("Login", "Account")" role="button">
            <i class="bi bi-box-arrow-in-right"></i> Back to Login
        </a>
    </div>
</div>
